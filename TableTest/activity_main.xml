<?xml version="1.0" encoding="utf-8"?><!--suppress AndroidDomInspection -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:orientation="vertical"
    tools:context="com.example.tabletest.MainActivity">

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_green_light"
        android:shrinkColumns="*">

        <com.example.tabletest.MyTableRow
            android:id="@+id/row1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary">

            <EditText
                android:id="@+id/editText1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:inputType="text"
                android:padding="8dp"
                android:text="Edit any cell"
                android:textColor="@android:color/white" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/holo_orange_light"
                android:inputType="text"
                android:padding="8dp"
                android:text="R1 C2"
                android:textColor="@android:color/white" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:inputType="text"
                android:padding="8dp"
                android:text="R1 C3"
                android:textColor="@android:color/white" />
        </com.example.tabletest.MyTableRow>

        <com.example.tabletest.MyTableRow
            android:id="@+id/row2"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:background="@color/colorPrimary">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:inputType="text"
                android:padding="8dp"
                android:text="R2 C1"
                android:textColor="@android:color/white" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/holo_orange_light"
                android:inputType="text"
                android:padding="8dp"
                android:text="R2 C2"
                android:textColor="@android:color/white" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:inputType="text"
                android:padding="8dp"
                android:text="R2 C3"
                android:textColor="@android:color/white" />
        </com.example.tabletest.MyTableRow>
    </TableLayout>

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="32dp"
        android:checked="false"
        android:text="Disable forceLayout()\nfor table" />

</LinearLayout>
